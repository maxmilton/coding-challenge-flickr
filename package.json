{
  "name": "coding-challenge-flickr",
  "private": true,
  "version": "1.0.0",
  "description": "Coding challenge Flickr",
  "repository": "https://github.com/MaxMilton/coding-challenge-flickr",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p start autobuild",
    "build": "NODE_ENV=production rollup -c",
    "autobuild": "rollup -c -w",
    "start": "serve -l 8080 dist",
    "prebuild": "shx rm -rf ./dist && shx mkdir ./dist && shx cp -r ./static/* ./dist",
    "postbuild": "yarn css:prefix && yarn css:minify",
    "css:prefix": "postcss dist/bundle.css --use autoprefixer -o dist/bundle.css",
    "css:minify": "cleancss -o dist/bundle.css dist/bundle.css",
    "clean": "lerna clean --yes",
    "lint:css": "stylelint **/*.{html,css} --cache",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern docs --ext .js,.html .",
    "lint": "yarn lint:css && yarn lint:js",
    "test": "yarn lint && jest --coverage",
    "test-ci": "jest --runInBand --ci --verbose --coverage"
  },
  "dependencies": {
    "svelte": "2.9.4"
  },
  "devDependencies": {
    "@minna-ui/eslint-config": "0.9.0",
    "@minna-ui/jest-config": "0.9.1",
    "@minna-ui/stylelint-config": "0.9.0",
    "autoprefixer": "9.0.0",
    "clean-css-cli": "4.1.11",
    "codecov": "3.0.4",
    "cross-env": "5.2.0",
    "eslint": "4.19.1",
    "jest": "23.4.1",
    "npm-run-all": "4.1.3",
    "postcss-cli": "5.0.1",
    "rollup": "0.62.0",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-terser": "1.0.1",
    "serve": "9.2.0",
    "shx": "0.3.2",
    "stylelint": "9.3.0"
  }
}
